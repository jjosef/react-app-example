{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser" : true
  },
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false
  },
  "rules": {
    "key-spacing"          : 0,
    "jsx-quotes"           : [0, "prefer-single"],
    "max-len"              : 0,
    "object-curly-spacing" : 0,
    "no-unused-vars"       : 1,
    "semi"                 : 0,
    "keyword-spacing"      : 0,
    "react/prop-types"     : 0,
    "react/self-closing-comp" : 0,
    "space-before-function-paren" : 0,
    "no-useless-constructor" : 0,
    "object-property-newline" : 1,
    "comma-dangle" : 1
  }
}
